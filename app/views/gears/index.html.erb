<div class="container">
  <h1 class="my-4">All Gears</h1>

  <%= link_to 'New Gear', new_gear_path, class: 'btn btn-success mb-4' %>

  <div class="row">
    <% @gears.each do |gear| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= gear.title %></h5>
            <p class="card-text"><strong>Price per day:</strong> Â£<%= gear.price_per_day %></p>
            <p class="card-text"><strong>Category:</strong> <%= gear.category %></p>
            <p class="card-text"><strong>Availability:</strong> <%= gear.availability ? 'Available' : 'Not Available' %></p>
            <%= link_to 'View', gear_path(gear), class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_gear_path(gear), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', gear, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="row">
    <div class="col-md-6">
      <div class="card text-center mb-4">
        <div class="card-body">
          <h5 class="card-title">List Your Gear</h5>
          <%= link_to 'List Your Gear', new_gear_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
</div>
