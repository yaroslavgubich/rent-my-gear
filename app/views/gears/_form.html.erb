<div class="container">
  <h1 class="my-4">

  <%= form_with(model: @gear, local: true, html: { class: 'row g-3' }) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter gear title' %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control', rows: 4, placeholder: 'Enter description' %>
    </div>

    <div class="row g-3">
      <div class="col-md-6 mb-3">
        <%= form.label :price_per_day, class: 'form-label' %>
        <div class="input-group">
          <span class="input-group-text">Â£</span>
          <%= form.number_field :price_per_day, class: 'form-control', placeholder: 'Enter price per day' %>
        </div>
      </div>

      <div class="col-md-6 mb-3">
        <%= form.label :category, class: 'form-label' %>
        <%= form.text_field :category, class: 'form-control', placeholder: 'Enter category' %>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :availability, class: 'form-label' %>
      <%= form.check_box :availability, class: 'form-check-input' %>
      <%= form.label :availability, 'Available', class: 'form-check-label' %>
    </div>

    <div class="mb-3">
      <%= form.submit button_text, class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to "Back to all Gears", gears_path, class: 'btn btn-primary' %>
</div>
